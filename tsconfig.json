{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "paths": {}
  }
}
